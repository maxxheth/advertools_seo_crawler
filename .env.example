# Environment Variables Example
# Copy this file to .env and fill in your values

# Crawl Settings
DEFAULT_PAGE_LIMIT=500
MAX_CONCURRENT_CRAWLERS=3

# Output and Storage
OUTPUT_PATH=/app/output
REPORT_STORAGE_PATH=/app/reports

# Watch Mode (Real-time monitoring)
WATCH_MODE=false
WATCH_PORT=8765

# Dashboard Settings
DASHBOARD_MODE=development  # development or production
AUTO_REFRESH_INTERVAL=30

# Analysis and Reports
ENABLE_ANALYSIS_REPORTS=true

# Report Retention and Cleanup
REPORT_RETENTION_DAYS=30
REPORT_COMPRESSION=gzip  # gzip, bz2, or none
AUTO_CLEANUP=true

# Screenshot Storage
SCREENSHOT_STORAGE=local  # local or s3
LOCAL_SCREENSHOT_PATH=/app/screenshots

# AWS S3 Configuration (if using S3 storage)
S3_BUCKET=my-seo-crawler-screenshots
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# API Keys and Credentials
SEMRUSH_API_KEY=
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
TWITTER_BEARER_TOKEN=
YOUTUBE_API_KEY=

# Configuration File Path
CONFIG_PATH=/app/config/config.yaml
